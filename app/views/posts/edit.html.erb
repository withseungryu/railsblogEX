<h1>Edit Page</h1>
<div class="container">
    <form action="/posts/update" method="get">
        <div class="form-group">
            <label for="title" >Title</label>
            <input type="name" value="<%=@edit_post.title%>" name="title" class="form-control" id ="NameInputTitle"></input>
        </div>
        <div class="form-group">
             <label for="body" >Body</label>
            <input type="name" value="<%=@edit_post.body%>" name="body" class="form-control" id ="NameInputBody"></input>
        </div>
        
        <textarea name="id" style="display:none;"><%=@edit_post.id%></textarea>
        <button type="submit" class="btn btn-success">Update</button>
    </form>
</div>